{% extends model('component') %}

{% define config = {
    name: 'image-gallery',
    tag: 'image-gallery',
} %}

{% define data = {
    idProductAbstract: required,
    images: [],
} %}

{% define attributes = {
    'active-class': config.name ~ '__item--active',
    'slider-config': '{}',
} %}

{% set imagesQuantity = data.images | length %}

{% block extraClass %}
    {{ config.jsName }}
{% endblock %}

{% block body %}
    {% if imagesQuantity > 1 %}
        {% include molecule('image-gallery-thumbnail', 'ProductImageWidget') with {
            class: config.jsName ~ '-thumbnail',
            data: {
                images: data.images,
            },
        } only %}
    {% endif %}

    {% set singleImageClass = imagesQuantity == 1 ? config.name ~ '__container--single-image' %}

    <div class="{{ config.name }}__container {{ singleImageClass }}">
        {% for image in data.images %}
            {% set activeItemClass = loop.first ? attributes['active-class'] %}

            <div class="{{ config.name }}__item {{ config.jsName }}__item {{ activeItemClass }}">
                {% if image.externalUrlLarge is not empty %}
                    <img class="{{ config.name }}__image" src="{{ image.externalUrlLarge }}" alt="{{ 'page.product.details.slider_image' | trans }}">
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
