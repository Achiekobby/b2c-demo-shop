{% extends molecule('configured-bundle', '@SprykerShop:ConfigurableBundleWidget') %}

{%- block extraClass %}{% endblock -%}

{%- block bundle -%}
    <div class="{{ config.name }}__container grid grid--middle">
        {%- block bundleInner -%}
            <div class="col col--sm-12 col--lg-6">
                {%- block bundleName -%}
                    <h4 class="spacing-right">
                        {%- block bundleNameText -%}
                            {{ parent() }}
                        {%- endblock -%}
                    </h4>
                {%- endblock -%}
            </div>
            <div class="{{ config.name }}__information-item col col--sm-12 col--lg-6 grid grid--middle">
                {%- block bundleQuantity -%}
                    {{ parent() }}
                {%- endblock -%}

                {%- block bundlePriceInformation -%}
                    <strong class="col col--md-4 {{ config.name }}__total">
                        {%- block bundleTotalInner -%}
                            {{ parent() }}
                        {%- endblock -%}
                    </strong>
                {%- endblock -%}
            </div>
        {%- endblock -%}
    </div>
{%- endblock -%}

{%- block bundleTotalTitle %}{% endblock -%}

{%- block bundleActionsInner %}
    {% set bundleActionClassName = 'float-right spacing spacing--big' %}

    {{ parent() }}
{% endblock -%}
