{% extends model('component') %}

{% define config = {
    name: 'checkbox',
    tag: 'span'
} %}

{% define attributes = {
    type: 'checkbox'
} %}

{% define data = {
    label: '',
    inputClass: '',
} %}

{% set disabled = attributes['disabled'] | default(false) %}

{% block extraAttributes %}
    {%- if disabled %}disabled{% endif -%}
{% endblock %}

{% block body %}
    <label class="{{ config.name }}__container" {{ qa('label') }}>
        <input class="{{ config.name }}__input {% block inputClass %} {{- data.inputClass -}} {% endblock %}" {{ block('attributes') }}/>
        <span class="{{ config.name }}__box"></span>
        {% block icon %}
            {% include atom('icon') with {
                class: config.name ~ '__check',
                data: {
                    name: 'check'
                }
            } only %}
        {% endblock %}

        {%- block labelContainer -%}    
            <span class="{{ config.name }}__label {% block labelClass %}{% endblock %}">
                {%- block label -%}{{ data.label }}{%- endblock -%}
            </span>
        {%- endblock -%}
    </label>
{% endblock %}
