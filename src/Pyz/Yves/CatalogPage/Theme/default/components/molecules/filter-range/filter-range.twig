{% extends model('component') %}

{% define config = {
    name: 'filter-range',
} %}

{% define data = {
    parameter: required,
    min: required,
    activeMin: required,
    max: required,
    activeMax: required,
} %}

{% block body %}
    {% set filtersEqual = data.max is same as(data.min)%}
    {% if not filtersEqual %}
        {% include molecule('range-slider') with {
            data: {
                parameter: data.parameter,
            },
            attributes: {
                'value-min': data.min,
                'value-max': data.max,
                'active-min': data.activeMin,
                'active-max': data.activeMax,
            },
        } only %}
    {% endif %}
{% endblock %}
