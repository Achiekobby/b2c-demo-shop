{% extends '@Gui/Layout/layout.twig' %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-3">Book List</h1>
        <a href="{{ url('/book/book/create') }}" class="btn btn-primary">Add New Book</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Publication Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.idBook }}</td>
                    <td>{{ book.name }}</td>
                    <td>{{ book.description }}</td>
                    <td>{{ book.publicationDate|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ url('/book/book/edit', {'id': book.idBook}) }}" class="btn btn-sm btn-warning">Edit</a>
                        <a href="{{ url('/book/book/delete', {'id': book.idBook}) }}" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
